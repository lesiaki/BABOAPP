<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mixtapeictsolutions.george"
    android:versionCode="1"
    android:versionName="1.0">
    

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />
    <!-- Accessing camera hardware -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   
    <application android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:allowBackup="true"
        >
        
        <activity android:name="com.mixtapeictsolutions.george.StartActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
       
        
        <activity android:name="com.mixtapeictsolutions.george.MainActivity" 
            android:label="@string/home_name"
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        
        <activity android:name="com.mixtapeictsolutions.george.RegistrationActivity" 
            android:label="@string/register_name"
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity android:name="com.mixtapeictsolutions.george.HistroryActivity" 
            android:label="@string/report_name"
            android:uiOptions="none">        
         </activity>
       
        
    </application>

</manifest>
